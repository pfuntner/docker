ansible=$(docker inspect ansible | json /0/NetworkSettings/IPAddress | tr -d \")
vanilla1=$(docker inspect vanilla1 | json /0/NetworkSettings/IPAddress | tr -d \")
vanilla2=$(docker inspect vanilla2 | json /0/NetworkSettings/IPAddress | tr -d \")

set -x
docker exec ansible bash -c "echo $ansible ansible >> /etc/hosts"
docker exec ansible bash -c "echo $vanilla1 vanilla1 >> /etc/hosts"
docker exec ansible bash -c "echo $vanilla2 vanilla2 >> /etc/hosts"

docker exec vanilla1 bash -c "echo $ansible ansible >> /etc/hosts"
docker exec vanilla1 bash -c "echo $vanilla1 vanilla1 >> /etc/hosts"
docker exec vanilla1 bash -c "echo $vanilla2 vanilla2 >> /etc/hosts"

docker exec vanilla2 bash -c "echo $ansible ansible >> /etc/hosts"
docker exec vanilla2 bash -c "echo $vanilla1 vanilla1 >> /etc/hosts"
docker exec vanilla2 bash -c "echo $vanilla2 vanilla2 >> /etc/hosts"
